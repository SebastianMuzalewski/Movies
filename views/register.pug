//- Task09: Create form for registration
//- 4 attributes are required to register
//- Name, Email, Password, Confirm Password

extends layout 

block content
    //- Loop through and display errors
    if errors
        each error in errors 
            p(style="color:red") #{error.msg}

    h1 Register
    //- Create form for user and post to express route
    form(method="POST", action="/users/register")
        //- Create input elements based on user model
        #form-group 
            label Name:
            input.form-control(name="name", type="text")

        #form-group 
            label Email:
            input.form-control(name="email", type="text")
    
        #form-group 
            label Password:
            input.form-control(name="password", type="password")

        #form-group 
            label Confirm Password:
            input.form-control(name="confirm_password", type="password")
        
        input.btn.btn-primary(type="submit", value="Submit")